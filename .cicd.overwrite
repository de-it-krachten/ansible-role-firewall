---

generic:
  role_description: |
    Role to open firewall ports for incoming traffic.
    Supports firewalld, ufw and iptables

molecule:
  prepare:
    vars:
      prepare_firewall: true
  converge:
    vars:
      firewall_ports:
        - port: "22"
          proto: tcp
        - port: "53"
          proto: udp

dependencies:
  roles:
    - deitkrachten.firewalld
    - deitkrachten.iptables
    - deitkrachten.ufw
