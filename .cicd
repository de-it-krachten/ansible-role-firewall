---

# Generic
generic:
  org: deitkrachten
  role: ansible-role-firewall
  role_short: firewall
  role_description: |
    <put description in .cicd.overwrite>

# Dependencies
dependencies:
  roles: []
  collections: []

# Supported platforms
platforms:
  rhel7:
    name: Red Hat Enterprise Linux 7
    ci: false
    supported: true
    galaxy:
      name: EL
      version: 7
    molecule:
      docker:
        image: "registry.access.redhat.com/ubi7/ubi-init:latest"
        pre_build_image: false
  rhel8:
    name: Red Hat Enterprise Linux 8
    ci: false
    supported: true
    galaxy:
      name: EL
      version: 8
    molecule:
      docker:
        image: "registry.access.redhat.com/ubi8/ubi-init:latest"
        pre_build_image: false
  rhel9:
    name: Red Hat Enterprise Linux 9
    ci: false
    supported: true
    galaxy:
      name: EL
      version: 9
    molecule:
      docker:
        image: "registry.access.redhat.com/ubi9/ubi-init:latest"
        pre_build_image: false
  centos7:
    name: CentOS 7
    ci: true
    supported: true
    galaxy:
      name: EL
      version: 7
    github:
      runs_on: "ubuntu-20.04"
    molecule:
      docker:
        image: "geerlingguy/docker-centos7-ansible:latest"
      vagrant:
        box: "generic/centos7"
      hetznercloud:
        image: centos-7
        server_type: cx11
  centos8:
    name: CentOS 8
    ci: false
    supported: false
    galaxy:
      name: EL
      version: 8
    molecule:
      docker:
        image: "geerlingguy/docker-centos8-ansible:latest"
      vagrant:
        box: "generic/centos8"
  centos8s:
    name: CentOS Stream 8
    ci: false
    supported: false
    galaxy:
      name: EL
      version: 8
    molecule:
      docker:
        image: "dropveter/centos8s-ansible:latest"
      vagrant:
        box: "generic/centos8s"
      hetznercloud:
        image: centos-stream-8
        server_type: cx11
  centos9s:
    name: CentOS Stream 9
    ci: false
    supported: false
    galaxy:
      name: EL
      version: 9
    molecule:
      docker:
        image: "dropveter/centos9s-ansible:latest"
      vagrant:
        box: "generic/centos9s"
      hetznercloud:
        image: centos-stream-9
        server_type: cx11
  rockylinux8:
    name: RockyLinux 8
    ci: true
    supported: true
    galaxy:
      name: EL
      version: 8
    molecule:
      docker:
        image: "geerlingguy/docker-rockylinux8-ansible:latest"
      vagrant:
        box: "generic/rocky8"
      hetznercloud:
        image: rocky-8
        server_type: cx11
  rockylinux9:
    name: RockyLinux 9
    ci: true
    supported: true
    galaxy:
      name: EL
      version: 9
    molecule:
      docker:
        image: "geerlingguy/docker-rockylinux9-ansible:latest"
      vagrant:
        box: "generic/rocky9"
      hetznercloud:
        image: rocky-9
        server_type: cx11
  oraclelinux8:
    name: OracleLinux 8
    ci: true
    supported: true
    galaxy:
      name: EL
      version: 8
    molecule:
      docker:
        image: "dropveter/oraclelinux8-ansible"
      vagrant:
        box: "generic/oracle8"
  oraclelinux9:
    name: OracleLinux 9
    ci: true
    supported: true
    galaxy:
      name: EL
      version: 9
    molecule:
      docker:
        image: "dropveter/oraclelinux9-ansible"
      vagrant:
        box: "generic/oracle9"
  almalinux8:
    name: AlmaLinux 8
    ci: true
    supported: true
    galaxy:
      name: EL
      version: 8
    molecule:
      docker:
        image: "dropveter/almalinux8-ansible"
      vagrant:
        box: "generic/alma8"
  almalinux9:
    name: AlmaLinux 9
    ci: true
    supported: true
    galaxy:
      name: EL
      version: 9
    molecule:
      docker:
        image: "dropveter/almalinux9-ansible"
      vagrant:
        box: "generic/alma9"
  debian10:
    name: Debian 10 (Buster)
    ci: true
    supported: true
    galaxy:
      name: Debian
      version: buster
    molecule:
      docker:
        image: "geerlingguy/docker-debian10-ansible:latest"
      vagrant:
        box: "generic/debian10"
      hetznercloud:
        image: debian-10
        server_type: cx11
  debian11:
    name: Debian 11 (Bullseye)
